{
  "description": "A representation of a buidlicence",
  "type": "object",
  "required": [ "id", "reference", "portalType" ],
  "properties": {
    "id": {
      "description": "unique id",
      "type": "string"
    },
    "portalType": {
      "type": "string",
      "enum" : [
                "BuildLicence",
                "ParcelOutLicence",
                "Article127",
                "Declaration",
                "Division",
                "NotaryLetter",
                "EnvClassOne",
                "EnvClassTwo",
                "EnvClassThree",
                "UniqueLicence",
                "MiscDemand"
      ]
    },
    "reference": {
      "type": "string"
    },
    "referenceDGATLP": {
      "type": ["string", "null"]
    },
    "licenceSubject": {
      "type": ["string", "null"]
    },
    "completionState": {
      "type": "string",
      "enum" : [
          "accept",
          "refuse",
          "retire",
          ""
      ]
    },
    "workLocations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["street"],
          "properties": {
          "street": {
            "type": "string"
          },
          "number": {
            "type": ["string", "null"]
          },
          "postalcode": {
            "type": "string"
          },
          "locality": {
            "type": "string"
          }
        }
      }
    },
    "applicants": {
      "type": "array",
      "items": {"$ref": "Applicant_Consolidate.json"}
    },
    "events": {
      "type": "array",
      "items": {"$ref": "Event_Consolidate.json"}
    }
  }
}
